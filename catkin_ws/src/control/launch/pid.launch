<launch>
  <!--Linear-->
  <node name="controller"
  pkg="pid"
  type="controller"
  ns="linear_pid"
  output="screen">
    <param name="node_name" value="pid" />

    <!--Default PID Gains (Should load from file eventually)-->
    <param name="Kp" value="10" />
    <param name="Ki" value="0.0" />
    <param name="Kd" value="0.0" />

    <!--Effort Limits-->
    <param name="upper_limit" value="50" />
    <param name="lower_limit" value="-50" />

    <!--Integral Factor Limit-->
    <param name="windup_limit" value="10" />

    <!--Set Topics-->
    <!--Setpoint will be "/<ns>/setpoint"-->
    <!--Enable will be "/<ns>/pid_enable"-->
    <param name="topic_from_controller" value="/control/translate_velocity" />
    <param name="topic_from_plant" value="/control/vel_measurements" />
  </node>

  <!--Angular-->
  <node name="controller"
  pkg="pid"
  type="controller"
  ns="angular_pid"
  output="screen">
    <param name="node_name" value="pid" />

    <!--Default PID Gains (Should load from file eventually)-->
    <param name="Kp" value="10" />
    <param name="Ki" value="0.0" />
    <param name="Kd" value="0.0" />

    <!-- Angle settings -->
    <param name="angle_error" value="true"/>

    <!--Effort Limits-->
    <param name="upper_limit" value="1000" />
    <param name="lower_limit" value="-1000" />

    <!--Integral Factor Limit-->
    <param name="windup_limit" value="10" />

    <!--Set Topics-->
    <!--Setpoint will be "/<ns>/setpoint"-->
    <!--Enable will be "/<ns>/pid_enable"-->
    <param name="topic_from_controller" value="/control/translate_angle" />
    <param name="topic_from_plant" value="/control/angle_measurements" />
  </node>


</launch>
